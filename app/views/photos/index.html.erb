<html>

  <head>
  </head>

  <body>
    <% if @photos.any? %>
      <% @photos.each do |photo|%>
        <p> <%= image_tag photo.image.url(:thumb) %></p>
        <%= link_to "#{photo.caption}", photo_path(photo)%>
        <%= link_to "Add comment", new_photo_comment_path(photo) %>
        <p><%= link_to 'Like', photo_likes_path(photo), class: 'likes-link'%>
        <span class= 'likes_count'> <%= photo.likes.count %> </span> likes</p>

         <% if can? :destroy, photo %>
         <%= link_to "Delete", photo_path(photo), method: :delete %>
         <% end %>

        <% if photo.comments.any? %>
          <ul>
            <% photo.comments.each do |comment|%>
              <li>
                <%= comment.coment %>
              </li>
              <% end %>
          </ul>
        <% else %>
          <p>No comments. </p>
        <% end %>

      <% end %>
    <% else %>
    No photos
    <% end %>


    <a href='/photos/new'>Add a photo</a>



  </body>

</html>